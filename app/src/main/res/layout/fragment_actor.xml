<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="cinema.webservice.polytech.fr.cinemawebservice.ui.FilmFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_actor_title"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
                android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"
                android:textAlignment="center" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name_label" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_actor_title"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="24dp" android:text="@string/lastName"/>
        <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_first_name_label"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="24dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_label" android:text="@string/firstName"
                tools:text="@string/firstName"/>
        <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_birthday_label" android:layout_marginTop="24dp"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_first_name_label"
                android:layout_marginStart="24dp" android:text="@string/birthday"/>

        <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_death_date_label" android:layout_marginTop="24dp"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_birthday_label"
                android:layout_marginStart="24dp" android:text="@string/deathdate"/>

        <TextView
                android:layout_height="wrap_content"
                android:id="@+id/tv_name"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_name_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_name_label" android:layout_marginLeft="16dp"
                android:layout_marginRight="24dp" app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp" android:layout_width="0dp"/>
        <TextView
                android:layout_height="wrap_content"
                android:id="@+id/tv_birthday"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_birthday_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_birthday_label" android:layout_marginLeft="16dp"
                android:layout_marginRight="24dp" app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp" android:layout_width="0dp"/>
        <TextView
                android:layout_height="wrap_content"
                android:id="@+id/tv_first_name"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_first_name_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_first_name_label" android:layout_marginLeft="16dp"
                android:layout_marginRight="24dp" app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp" android:layout_width="0dp"/>
        <TextView
                android:text="N/A"
                android:layout_height="wrap_content"
                android:id="@+id/tv_death_date"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_death_date_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_death_date_label" android:layout_marginLeft="16dp"
                android:layout_marginRight="24dp" app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp" android:layout_width="0dp"/>

        <android.support.v7.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/list_characters"
                android:name="cinema.webservice.polytech.fr.cinemawebservice.ItemFragment"
                android:layout_width="278dp"
                android:layout_height="192dp"
                app:layoutManager="LinearLayoutManager"
                tools:context="cinema.webservice.polytech.fr.cinemawebservice.ui.actorFragment"
                tools:listitem="@layout/fragment_item"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_death_date_label" android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" tools:layout_editor_absoluteY="293dp"
                tools:layout_editor_absoluteX="74dp"/>
    </android.support.constraint.ConstraintLayout>


</FrameLayout>
