<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="cinema.webservice.polytech.fr.cinemawebservice.ui.FilmFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_director_title"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
                android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"
                android:textAlignment="center" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                android:textColor="@android:color/holo_blue_bright"/>

        <android.support.v7.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/list_directors"
                android:name="cinema.webservice.polytech.fr.cinemawebservice.ItemFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layoutManager="LinearLayoutManager"
                tools:context="cinema.webservice.polytech.fr.cinemawebservice.ui.directorFragment"
                tools:listitem="@layout/fragment_item"
                android:layout_marginRight="32dp"
                app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_director_title"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.0" android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
